<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3 ">
        <div class="col-8 offset-2">
            <h3>Edit Listings </h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="for-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title%>" class="form-control"required>
                    <div class="invalid-feedback">Please Enter Title</div>
                    <div class="valid-feedback">Title Looks good!</div>  
                </div>
                <div class="mb-3">   
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control" value=<%= listing.image %> >
                    <div class="invalid-feedback">Please Insert Image</div>
                    <div class="valid-feedback">Image Looks good!</div>  
                </div>
                <div class="mb-3">
                    <label for="Description" class="for-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required ><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please Enter Description</div>
                <div class="valid-feedback">Description Looks good!</div> 
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="Price" class="for-label">Price</label>
                        <input name="listing[price]" class="form-control" value="<%= listing.price %>" required>
                        <div class="invalid-feedback">Please Enter Price <small> note price must be a number Format</small></div>
                        <div class="valid-feedback">Title Looks good!</div> 
                        
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="Country" class="for-label">Country</label>
                        <input name="listing[country]" class="form-control" value="<%= listing.country %>" required>
                        <div class="invalid-feedback">Please Enter Country</div>
                        <div class="valid-feedback">Looks good!</div> 
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Location" class="for-label">Location</label>
                    <input name="listing[location]" class="form-control" value="<%=listing.location %>">
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
        </div>
    </div>

    </form>

</body>
