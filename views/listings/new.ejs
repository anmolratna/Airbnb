<% layout("/layouts/boilerplate") -%>
<form class="needs-validation" novalidate  method="POST" action="/listings" >
    <div class="row">
        <div class="col-8 offset-2 mt-3" >
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Enter title"  id="validationCustom01"  type="text" class="form-control" required>
                <div class="invalid-feedback">Please Enter Title</div>
                <div class="valid-feedback">Title Looks good!</div>  
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please Enter Description</div>
                <div class="valid-feedback">Description Looks good!</div>  
            </div>
            <div class="mb-3">   
                <label for="image" class="form-label">Image</label>
                <input name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control" >
                <div class="invalid-feedback">Please Insert Image</div>
                <div class="valid-feedback">Image Looks good!</div>  
            </div>
            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="Enter price"  class="form-control" required>
                    <div class="invalid-feedback">Please Enter Price <small> note price must be a number Format</small></div>
                    <div class="valid-feedback"> Looks good!</div>  
                </div>
                <div class="mb-3 col-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please Enter Country</div>
                    <div class="valid-feedback">Looks good!</div>  
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
                <div class="invalid-feedback">Please Enter Location</div>
                <div class="valid-feedback">Looks good!</div>  
            </div>
            <div class="mb-3 mt-3 col-5 d-flex justify-content-center align-items-center">
                <button class="btn btn-dark add-btn">Add</button>
            </div>
        </div>
    </div>
</form>

