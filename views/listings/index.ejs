<% layout("/layouts/boilerplate") -%>
<body>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listings-link">
                <div class="card cols listing-card" style="width: 20rem;">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing image" style="height:20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            <i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;<%= listing.location %> | <%= listing.country %>
                            <br>
                            <% if (listing.price !== null && typeof listing.price !== 'undefined') { %>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %> / Night</b>
                            <% } else { %>
                                Price not available
                            <% } %>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

</body>
